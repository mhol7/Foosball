@model Foosball.Models.FoosballClasses.Match

@{
    ViewBag.Title = "CreateMatch";
}

<h2>CreateMatch</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Match</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-4 col-md-5">
                <div id="Winners">
                    <h4 style="margin-top:5px ; margin-bottom:10px; margin-left:auto; margin-right:auto">Winner Team</h4>
                    <input type="text" id="p1" placeholder="Winner player One" style="margin-left:15px; padding:10px"/>
                    <input type="text" id="p2" placeholder="Winner player Two" style="margin-left:15px; padding:10px" />
                </div>
                <div id="Losers">
                    <h4 style="margin-top:25px ; margin-bottom:10px; left:auto; right:auto">Loser Team</h4>
                    <input type="text" id="p3" placeholder="Loser player One" style="margin-left:15px; padding:10px" />
                    <input type="text" id="p4" placeholder="Loser player Two" style="margin-left:15px; padding:10px" />
                </div>

                <div>
                    <input type="submit" value="Create Match" class="btn btn-success" style="margin-top:20px; right:20px; padding:5px" />
                </div>
                    </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
